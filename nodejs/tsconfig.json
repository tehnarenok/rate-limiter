{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "node",
		"noEmitOnError": true,
		"noEmit": true,
		"noErrorTruncation": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"preserveConstEnums": true,
		"resolveJsonModule": true,
		"strict": true,
		"strictNullChecks": true,
		"target": "es6",
		"sourceMap": true,
		"plugins": [],
	},
	"include": [
		"**/*.ts",
	],
	"exclude": [
		"**/*.d.ts",
		"dst",
		"node_modules"
	]
}